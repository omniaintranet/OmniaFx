{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom",
      "webworker"
    ],
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": false,
    "noEmit": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "removeComments": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxFactory": "VueTsxSupport",
    "typeRoots": [
      "./node_modules/@omnia/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "omnia.service.ts",
    "configurations/**/*",
    "docs/.vuepress/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}